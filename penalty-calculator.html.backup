<script>
function calculatePenalty() {
  const returnType = document.getElementById('returnType').value;
  const daysLate = parseInt(document.getElementById('daysLate').value);
  const taxAmount = parseFloat(document.getElementById('taxAmount').value);

  if (!daysLate || !taxAmount) {
    alert('Please fill in all fields');
    return;
  }

  // Simplified penalty calculation (example)
  let lateFee = 0;
  let interest = 0;

  if (returnType === 'gstr3b') {
    lateFee = Math.min(daysLate * 50, 5000); // ‚Çπ50/day, max ‚Çπ5000
  } else if (returnType === 'gstr1') {
    lateFee = Math.min(daysLate * 100, 10000); // ‚Çπ100/day, max ‚Çπ10000
  } else {
    lateFee = Math.min(daysLate * 200, 25000); // ‚Çπ200/day, max ‚Çπ25000
  }

  interest = (taxAmount * 0.18 * daysLate) / 365;
  
  const total = lateFee + interest;

  document.getElementById('totalPenalty').textContent = '‚Çπ' + total.toLocaleString('en-IN', {minimumFractionDigits:2});
  document.getElementById('penaltyBreakdown').innerHTML = `
    <strong>Late Fee:</strong> ‚Çπ${lateFee.toLocaleString('en-IN')}<br>
    <strong>Interest (18% p.a.):</strong> ‚Çπ${interest.toLocaleString('en-IN', {minimumFractionDigits:2})}<br>
    <strong>Days Late:</strong> ${daysLate} days<br>
    <strong>Return Type:</strong> ${returnType.toUpperCase()}
  `;
  
  document.getElementById('resultBox').style.display = 'block';
  document.getElementById('resultBox').scrollIntoView({behavior:'smooth', block:'center'});
}

// Auto-calculate on page load
window.addEventListener('load', () => {
  calculatePenalty();
});
</script>

