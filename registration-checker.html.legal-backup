<script>
function checkEligibility() {
  const businessType = document.querySelector('input[name="businessType"]:checked');
  const turnover = document.getElementById('turnover').value;
  const interstate = document.querySelector('input[name="interstate"]:checked');
  const location = document.getElementById('location').value;
  const box = document.getElementById('resultBox');

  if (!businessType || !turnover || !interstate || !location) {
    alert('Please answer all questions');
    return;
  }

  let required = false;
  let reason = '';

  // E-commerce = always mandatory
  if (businessType.value === 'ecommerce') {
    required = true;
    reason = 'E-commerce sellers must register for GST <strong>regardless of turnover</strong>. This is mandatory as per Section 24 of CGST Act.';
  }
  // Interstate = always mandatory
  else if (interstate.value === 'yes') {
    required = true;
    reason = 'Inter-state supply requires GST registration <strong>regardless of turnover</strong>. You cannot sell across states without GSTIN.';
  }
  // Turnover check
  else {
    const isSpecial = location === 'special';
    
    if (businessType.value === 'goods') {
      const threshold = isSpecial ? 20 : 40;
      if (turnover === '40plus' || (isSpecial && (turnover === '20to40' || turnover === '40plus'))) {
        required = true;
        reason = `Your turnover exceeds ‚Çπ${threshold} lakhs threshold for goods in ${isSpecial ? 'special' : 'normal'} states. Registration is <strong>mandatory</strong>.`;
      }
    } else if (businessType.value === 'services') {
      const threshold = isSpecial ? 10 : 20;
      if ((turnover === '20to40' || turnover === '40plus') || (isSpecial && (turnover === '10to20' || turnover === '20to40' || turnover === '40plus'))) {
        required = true;
        reason = `Your turnover exceeds ‚Çπ${threshold} lakhs threshold for services in ${isSpecial ? 'special' : 'normal'} states. Registration is <strong>mandatory</strong>.`;
      }
    } else if (businessType.value === 'both') {
      const threshold = isSpecial ? 20 : 40;
      if (turnover === '40plus' || (isSpecial && (turnover === '20to40' || turnover === '40plus'))) {
        required = true;
        reason = `For mixed businesses, the ‚Çπ${threshold} lakhs threshold applies. Your turnover requires <strong>mandatory</strong> registration.`;
      }
    }
  }

  // Display result
  if (required) {
    box.className = 'result-box danger';
    box.innerHTML = `
      <div class="result-icon">üö®</div>
      <h3>Registration Required</h3>
      <p>${reason}</p>
      <a href="blog/how-to-get-gst-number.html" class="btn btn-primary" style="margin-top:16px;">Learn How to Register ‚Üí</a>
    `;
  } else {
    box.className = 'result-box safe';
    box.innerHTML = `
      <div class="result-icon">‚úÖ</div>
      <h3>Registration Not Mandatory</h3>
      <p>Based on your answers, GST registration is <strong>not mandatory</strong> for you right now. However, you can register <strong>voluntarily</strong> to claim input tax credit and appear more professional to buyers.</p>
      <a href="blog/how-to-get-gst-number.html" class="btn btn-outline" style="margin-top:16px; color:var(--navy); border-color:var(--navy);">Learn About Voluntary Registration ‚Üí</a>
    `;
  }

  box.style.display = 'block';
  box.scrollIntoView({behavior:'smooth', block:'center'});
}
</script>

