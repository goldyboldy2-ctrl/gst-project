<script>
function calculateInterest() {
  const taxAmount = parseFloat(document.getElementById('taxAmount').value);
  const dueDate = document.getElementById('dueDate').value;
  const paymentDate = document.getElementById('paymentDate').value;
  const rate = parseFloat(document.getElementById('interestRate').value);

  if (!taxAmount || !dueDate) {
    alert('Please enter tax amount and due date');
    return;
  }

  const due = new Date(dueDate);
  const paid = paymentDate ? new Date(paymentDate) : new Date();

  // Calculate days late
  const timeDiff = paid - due;
  const daysLate = Math.ceil(timeDiff / (1000 * 60 * 60 * 24));

  if (daysLate <= 0) {
    const resultBox = document.getElementById('resultBox');
    resultBox.className = 'result-box safe';
    resultBox.innerHTML = `
      <div class="result-icon">‚úÖ</div>
      <h3>No Interest Payable</h3>
      <p>Payment was made on or before the due date. No interest is applicable.</p>
      <div style="background:white; border-radius:8px; padding:20px; margin-top:16px;">
        <table style="width:100%; border-collapse:collapse;">
          <tr style="border-bottom:1px solid var(--border);">
            <td style="padding:12px 0; font-weight:600;">Tax Amount:</td>
            <td style="padding:12px 0; text-align:right;">‚Çπ${taxAmount.toLocaleString('en-IN', {minimumFractionDigits:2, maximumFractionDigits:2})}</td>
          </tr>
          <tr style="border-bottom:1px solid var(--border);">
            <td style="padding:12px 0; font-weight:600;">Due Date:</td>
            <td style="padding:12px 0; text-align:right;">${due.toLocaleDateString('en-IN')}</td>
          </tr>
          <tr style="border-bottom:1px solid var(--border);">
            <td style="padding:12px 0; font-weight:600;">Payment Date:</td>
            <td style="padding:12px 0; text-align:right;">${paid.toLocaleDateString('en-IN')}</td>
          </tr>
          <tr style="background:rgba(34,197,94,0.1);">
            <td style="padding:14px 0; font-weight:700;">Interest:</td>
            <td style="padding:14px 0; text-align:right; font-weight:700; color:var(--green);">‚Çπ0.00</td>
          </tr>
        </table>
      </div>
    `;
    resultBox.style.display = 'block';
    resultBox.scrollIntoView({behavior:'smooth', block:'center'});
    return;
  }

  // Calculate interest (simple interest for estimation)
  const interest = (taxAmount * rate * daysLate) / (365 * 100);
  const totalPayable = taxAmount + interest;

  const resultBox = document.getElementById('resultBox');
  resultBox.className = 'result-box danger';
  resultBox.innerHTML = `
    <div class="result-icon">üí∞</div>
    <h3>Interest Payable on Delayed GST</h3>
    <div style="background:white; border-radius:8px; padding:24px; margin-top:20px;">
      <table style="width:100%; border-collapse:collapse;">
        <tr style="border-bottom:2px solid var(--border);">
          <td style="padding:14px 0; font-weight:600;">Tax Amount Paid Late:</td>
          <td style="padding:14px 0; text-align:right; font-size:1.1rem;">‚Çπ${taxAmount.toLocaleString('en-IN', {minimumFractionDigits:2, maximumFractionDigits:2})}</td>
        </tr>
        <tr style="border-bottom:1px solid var(--border);">
          <td style="padding:12px 0; font-weight:600;">Due Date:</td>
          <td style="padding:12px 0; text-align:right;">${due.toLocaleDateString('en-IN')}</td>
        </tr>
        <tr style="border-bottom:1px solid var(--border);">
          <td style="padding:12px 0; font-weight:600;">Payment Date:</td>
          <td style="padding:12px 0; text-align:right;">${paid.toLocaleDateString('en-IN')}</td>
        </tr>
        <tr style="border-bottom:1px solid var(--border);">
          <td style="padding:12px 0; font-weight:600;">Days Late:</td>
          <td style="padding:12px 0; text-align:right; color:var(--red); font-weight:600;">${daysLate} days</td>
        </tr>
        <tr style="border-bottom:1px solid var(--border);">
          <td style="padding:12px 0; font-weight:600;">Interest Rate:</td>
          <td style="padding:12px 0; text-align:right;">${rate}% per annum</td>
        </tr>
        <tr style="border-bottom:2px solid var(--border);">
          <td style="padding:12px 0; font-weight:600;">Interest Calculation:</td>
          <td style="padding:12px 0; text-align:right; font-size:0.9rem; color:var(--muted);">‚Çπ${taxAmount.toLocaleString('en-IN')} √ó ${rate}% √ó ${daysLate} days / 365</td>
        </tr>
        <tr style="border-bottom:2px solid var(--border);">
          <td style="padding:14px 0; font-weight:700; color:var(--red);">Interest Payable:</td>
          <td style="padding:14px 0; text-align:right; font-weight:700; font-size:1.2rem; color:var(--red);">‚Çπ${interest.toLocaleString('en-IN', {minimumFractionDigits:2, maximumFractionDigits:2})}</td>
        </tr>
        <tr style="background:rgba(239,68,68,0.1);">
          <td style="padding:16px 0; font-weight:700; font-size:1.1rem;">Total to Pay (Tax + Interest):</td>
          <td style="padding:16px 0; text-align:right; font-weight:700; font-size:1.4rem; color:var(--red);">‚Çπ${totalPayable.toLocaleString('en-IN', {minimumFractionDigits:2, maximumFractionDigits:2})}</td>
        </tr>
      </table>
    </div>
    <div style="background:#fff3cd; border:1px solid #ffc107; border-radius:8px; padding:16px; margin-top:20px;">
      <h4 style="margin:0 0 8px; color:#856404;">‚ö†Ô∏è Important:</h4>
      <p style="margin:0; color:#856404; font-size:0.9rem;">
        This is a <strong>simple interest estimate</strong>. The GST portal calculates compound interest (monthly compounding) which may be slightly higher. Use this for quick estimation only. Always verify the exact amount on the GST portal before payment.
      </p>
    </div>
    ${daysLate > 30 ? `
    <div style="background:#fee2e2; border:1px solid #ef4444; border-radius:8px; padding:16px; margin-top:16px;">
      <h4 style="margin:0 0 8px; color:#991b1b;">üö® Delayed Payment Alert:</h4>
      <p style="margin:0; color:#991b1b; font-size:0.9rem;">
        Payment is delayed by <strong>${daysLate} days</strong>. The interest is accruing daily. Pay immediately to stop further interest charges. For delays > 90 days, you may also face late fees and potential penalty under Section 73.
      </p>
    </div>
    ` : ''}
  `;

  resultBox.style.display = 'block';
  resultBox.scrollIntoView({behavior:'smooth', block:'center'});
}

// Set default dates
window.addEventListener('load', () => {
  const today = new Date();
  const thirtyDaysAgo = new Date(today);
  thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);
  
  document.getElementById('dueDate').value = thirtyDaysAgo.toISOString().split('T')[0];
  document.getElementById('paymentDate').value = today.toISOString().split('T')[0];
});
</script>

